@model IEnumerable<AlManalChickens.Domain.ViewModel.Notification.HistoryNotificationViewModel>

@{
    ViewData["Title"] = "Index";
}

<div class="card-box">
    <h2 class="header-title m-t-0 m-b-30">الاشعارات</h2>

    <div>
        <!-- -------------------------------------------------------------------------------------------------- -->
        <p>
            @Html.ActionLink("ارسال اشعار جديد", "SendNotify", "SendNotification", null, new { @class = "btn btn-primary btn-rounded w-md waves-effect waves-light m-b-5" })
        </p>

        <table id="datatable-responsive" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
            <thead>
                <tr>

                    <th style="text-align:center">
                        الاشعارات
                    </th>
                    <th style="text-align:center">
                        التاريخ
                    </th>
                    <th style="text-align:center">
                        عدد المستخدمين
                    </th>
                    <th style="text-align:center">
                        عدد مقدمى الخدمه
                    </th>

                </tr>
            </thead>
            <tbody style="text-align:center">
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Text</td>
                        <td>@item.TextDate</td>
                        <td>@item.UserNotifyCount</td>
                        <td>@item.ProviderNotifyCount</td>
                    </tr>

                }

            </tbody>

        </table>
    </div><!-- end row -->
</div>

