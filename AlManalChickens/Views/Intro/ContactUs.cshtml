@using AlManalChickens.Domain.Enums;
@model AlManalChickens.Services.DTO.ContactusDto.CreateContacusDto

@{
    Layout = "~/Views/Shared/_LayoutWebsite.cshtml";
}
<div class="paner_">
    <img src="~/Website/imgs/paner7.jpg">
    <div class="d-flex flex-column gap-3 justify-content-center align-items-center">
        <h1 class="m-0 wow fadeIn" data-wow-duration="2s" data-wow-delay="0.2s">تواصل معنا</h1>
    </div>
</div>

<div class="sec-marg">
    <div class="container">
        <div>

            <div class="allIteminfo_call px-3 wow fadeIn" data-wow-duration="2s" data-wow-delay="0.2s">
                <div class="row">
                    <div class="col-md-4 p-0">
                        <div class="iteminfo_call">
                            <img src="~/Website/imgs/email.png">
                            <h5 class="main-color mb-3">البريد الآلكتروني</h5>
                            <div>
                                <aside>osmanobeh@gmail.com</aside>
                                <aside>test@gmail.com</aside>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 p-0">
                        <div class="iteminfo_call">
                            <img src="~/Website/imgs/location.png">
                            <h5 class="main-color mb-3">الموقع</h5>
                            <div>
                                <aside> السلي , الرياض , السعودية </aside>
                                <aside>شارع ابن العميد</aside>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 p-0">
                        <div class="iteminfo_call">
                            <img src="~/Website/imgs/phone.png">
                            <h5 class="main-color mb-3">رقم الجوال</h5>
                            <div>
                                <aside>+015559777744(20)</aside>
                                <aside>+015559777744(20)</aside>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <hr class="my-5 wow fadeIn" data-wow-duration="2s" data-wow-delay="0.2s">

            <div class="row">
                <div class="col-lg-6">
                    <div>
                        <h3 class="f-b main-color mb-3 text-center wow fadeIn" data-wow-duration="2s" data-wow-delay="0.2s ">إملأ النموذج</h3>
                        <form asp-action="ContactUs" method="post" class="form-content m-0 wow fadeIn" data-wow-duration="2s" data-wow-delay="0.2s">
                            <div class="form-group">
                                <label class="text-center d-block">النوع</label>
                                <div class="Types_Complaint d-flex justify-content-center align-items-center gap-2">
                                    <div>
                                        <input type="radio" asp-for="contactusType" value="@((int)ContactusType.complaint)" checked>
                                        <aside>شكوى</aside>
                                        <span></span>
                                    </div>
                                    <div>
                                        <input type="radio" asp-for="contactusType" value="@((int)ContactusType.Suggest)">
                                        <aside>اقتراح</aside>
                                        <span></span>
                                    </div>
 
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label>الاسم</label>
                                        <input asp-for="userName" class="form-control" placeholder="الاسم الكامل">
                                        <span asp-validation-for="userName" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label>البريد الإلكتروني</label>
                                        <input asp-for="email" class="form-control"  placeholder="برجاء إدخال البريد الإلكتروني">
                                        <span asp-validation-for="email" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label>الجنس</label>
                                        <select class="form-control select_2" asp-for="gender">
                                            <option selected disabled hidden>برجاء اختيار الجنس</option>
                                            <option  value="@((int)GenderType.male)">ذكر</option>
                                            <option value="@((int)GenderType.female)">انثى</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label>المنطقة</label>
                                        <input asp-for="region" class="form-control" placeholder="برجاء إدخال المنطقة">
                                        <span asp-validation-for="region" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label>رقم الجوال</label>
                                        <input asp-for="phoneNumber" class="form-control" placeholder="برجاء إدخال رقم الجوال">
                                        <span asp-validation-for="phoneNumber" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-sm-12">
                                    <div class="form-group">
                                        <label>رسالة</label>
                                        <textarea class="form-control" asp-for="message" placeholder="برجاء إدخال الرسالة"></textarea>
                                        <span asp-validation-for="message" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <button type="submit" class="btn-main btn-main-w w-100">إرسال</button>
                        </form>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="map wow fadeIn" data-wow-duration="2s" data-wow-delay="0.2s">
                        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d126908.123456789!2d46.67500000000001!3d24.713551999999998!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x15c5e8a9b9b9b9b9%3A0x123456789abcdef0!2z2YXRhZ2F0aW9uIE1hbmFs!5e0!3m2!1sen!2ssa!4v1616161616161" width="100%" height="653" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
@section scripts{
    <script>
    </script>
}