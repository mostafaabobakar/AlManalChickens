@model AlManalChickens.Domain.ViewModel.Regions.CreateRegionViewModel

@{
    ViewData["Title"] = "اضافة حي";
}

<div class="card-box">
    <h2 class="header-title m-t-0 m-b-30">اضافة حي</h2>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Create" enctype="multipart/form-data" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="NameAr" class="control-label">اسم الحي بالعربيه</label>
                    <input asp-for="NameAr" class="form-control" />
                    <span asp-validation-for="NameAr" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="NameEn" class="control-label">اسم الحي بالانجليزيه</label>
                    <input asp-for="NameEn" class="form-control" />
                    <span asp-validation-for="NameEn" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CityId" class="control-label">المدينة</label>
                    <select asp-for="CityId"
                            class="form-control"
                            asp-items="@ViewBag.city">
                        <option value="0" selected="selected">من فضلك اختر مدينتك</option>
                    </select>
                    <span asp-validation-for="CityId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="اضافة" class="btn-new-style btn-rounded" />
                </div>
                <div>
                    <a asp-controller="Regions" asp-action="Index" class="btn-black">العودة الى الرئيسية</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
