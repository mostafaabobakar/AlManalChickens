@model AlManalChickens.Domain.ViewModel.Cities.EditCityViewModel

@{
    ViewData["Title"] = "تعديل المدينة";
}

<div class="card-box">
    <h2 class="header-title m-t-0 m-b-30">تعديل المدينة </h2>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Edit" enctype="multipart/form-data" method="post">
                <input type="hidden" name="Id" value="@Model.Id" />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="NameAr" class="control-label">اسم المدينة بالعربيه</label>
                    <input asp-for="NameAr" class="form-control" />
                    <span asp-validation-for="NameAr" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="NameEn" class="control-label">اسم المدينة بالانجليزيه</label>
                    <input asp-for="NameEn" class="form-control" />
                    <span asp-validation-for="NameEn" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="تعديل" class="btn-new-style btn-rounded" />
                </div>
                <div>
                    <a asp-action="Index" class="btn-black">العودة الى الرئيسية</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
